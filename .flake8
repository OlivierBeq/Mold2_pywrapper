# .flake8

[flake8]
# --- Flake8 Configuration ---
# See: https://flake8.pycqa.org/en/latest/user/configuration.html

# Set the maximum line length to match Black's default.
max-line-length = 110

# Ignore specific errors to make Flake8 compatible with Black.
# E203: Whitespace before ':'
# W503: Line break before binary operator
ignore = E203, W503

# Exclude files and directories that are not needed to be checked.
exclude =
    .git
    __pycache__
    .tox
    build
    dist
    .eggs
